{
  "name": "staysync-hotel-management",
  "productName": "StaySync Manager",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "main": "electron/main.js",
  "author": "StaySync Inc",
  "description": "Smart Hotel Management Dashboard",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "dist": "tsc && vite build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.32.0",
    "dexie": "^4.0.1",
    "firebase": "^10.8.0",
    "lucide-react": "^0.559.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "recharts": "^3.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.1",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.0",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.staysync.manager",
    "productName": "StaySync",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": ["deb", "AppImage"],
      "category": "Office",
      "maintainer": "StaySync"
    }
  }
}